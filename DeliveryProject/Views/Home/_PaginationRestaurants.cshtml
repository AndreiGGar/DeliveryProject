@model RestaurantListViewModel

<div class="row" id="restaurants-row">
    @foreach (Restaurant restaurant in Model.Restaurants)
    {
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-4 col-xxl-4 mb-5 h-100">
            <a asp-controller="Restaurant" asp-action="Index" asp-route-id="@restaurant.Id">
                <div class="card border-0 shadow">
                    <img class="card-img-top" src="~/assets/images/restaurants/@restaurant.Image" style="width: 100%; height:220px;" />
                    <div class="card-body">
                        <div class="row">
                            <h5 class="card-title text-center mb-4">
                                @restaurant.Name
                            </h5>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center">
                                <i class="fa-solid fa-truck-fast me-2" style="color: black;"></i>
                                <p class="mb-0">@restaurant.DeliveryFee €</p>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <i class="fa-solid fa-clock-rotate-left me-2" style="color: black;"></i>
                                <p class="mb-0">@restaurant.DeliveryMinTime - @restaurant.DeliveryMaxTime min.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.PaginationRestaurants.CurrentPage > 1)
        {
            <li class="page-item">
                <button class="page-link" onclick="loadRestaurants(@Model.PaginationRestaurants.CurrentPage - 1, 3, @Model.SelectedCategory); return false;">Anterior</button>
            </li>
        }
        @for (int i = 1; i <= Model.PaginationRestaurants.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PaginationRestaurants.CurrentPage ? "active" : "")">
                <button class="page-link" onclick="loadRestaurants(@i, 3, @Model.SelectedCategory); return false;">@i</button>
            </li>
        }
        @if (Model.PaginationRestaurants.CurrentPage < Model.PaginationRestaurants.TotalPages)
        {
            <li class="page-item">
                <button class="page-link" onclick="loadRestaurants(@Model.PaginationRestaurants.CurrentPage + 1, 3, @Model.SelectedCategory); return false;">Siguiente</button>
            </li>
        }
    </ul>
</nav>