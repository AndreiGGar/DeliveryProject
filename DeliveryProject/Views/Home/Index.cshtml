@{
    ViewData["Title"] = "Delivery";
    List<Restaurant> restaurants = ViewData["RESTAURANTS"] as List<Restaurant>;
}

<div class="row">
    <div class="col-md-3">
        Filtros
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (Restaurant restaurant in restaurants)
            {
                <div class="col-md-6 col-lg-6 col-xl-4 col-xxl-3 mb-5 h-100">
                    <div class="card">
                        <img class="card-img-top" src="~/assets/images/restaurants/@restaurant.Image" style="width: 100%; height:250px;" />
                        <div class="card-body">
                            <h5 class="card-title">
                                @restaurant.Name
                            </h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

